/*
 * ----------------------------------------------------------------------------
 *  Nextflow config file for use with Singularity on BINAC cluster in Tuebingen
 * ----------------------------------------------------------------------------
 * Defines basic usage limits and singularity image id. 
 * Also sets genome_base to local igenomes path.
 */

singularity {
    enabled = true
}

process {
    beforeScript = 'module load devel/singularity/3.0.1'
    executor = 'pbs'
    queue = 'short'
}

params {
  publishDirMode = 'symlink' 
  max_memory = 128.GB
  max_cpus = 28
  max_time = 48.h
  genome_base = params.genome == 'GRCh37' ? '/beegfs/work/igenomes/Homo_sapiens/GATK/GRCh37' : params.genome == 'GRCh38' ? '/beegfs/work/igenomes/Homo_sapiens/GATK/GRCh38' : 'References/smallGRCh37'
}
